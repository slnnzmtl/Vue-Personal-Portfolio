{
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
  ],
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/components": ["./src/components"],
      "@/components/*": ["./src/components/*"],
      "@/composables": ["./src/composables"],
      "@/styles/*": ["./src/styles/*"],
      "@/stores/*": ["./src/stores/*"],
      "@/modals/*": ["./src/modals/*"],
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
}